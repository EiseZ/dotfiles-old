{
    "coc.preferences.formatOnSaveFiletypes": ["*"],
    "prettier.tabWidth": 4,
    "prettier.disableLanguages": ["haskell", "hs", "lhs"],
    "languageserver": {
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                ".stack.yaml",
                ".hie-bios",
                "BUILD.bazel",
                "cabal.config",
                "package.yaml"
            ],
            "filetypes": ["hs", "lhs", "haskell"],
            "formattingProvider": "brittany"
        }
    },
    "svelte.enable-ts-plugin": true
}

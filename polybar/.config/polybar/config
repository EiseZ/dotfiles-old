;[module/temperature]
;type = internal/temperature
;thermal-zone = 0
;warn-temperature = 75
;
;format = <label>
;format-underline = ${colors.primary}
;format-warn = <label-warn>
;format-warn-underline = ${colors.alert}
;
;label = %{F#555}TMP%{F-} %temperature-c%%

[module/temp]
type = custom/script
exec = tempIn=$(cat /sys/devices/pci0000:00/0000:00:18.3/hwmon/hwmon1/temp3_input) && tempOut=${tempIn%???} && echo "$tempOut"
format-underline = ${colors.primary}
label = %{F#555}TMP%{F-} %output%°
interval = 2

[module/powermodule]
type = custom/script
exec = echo ⏻
format-underline = ${colors.primary}
click-left = $HOME/scripts/powermenu.sh

;[module/powermenu]
;type = custom/menu
;
;expand-right = true
;
;format-spacing = 1
;
;format-underline = ${colors.primary}
;
;label-open = ⏻
;label-open-foreground = ${colors.foreground-alt}
;label-close = EXT
;label-close-foreground = ${colors.foreground-alt}
;label-separator = |
;label-separator-foreground = ${colors.foreground-alt}
;
;menu-0-0 = RBT
;menu-0-0-exec = menu-open-1
;menu-0-1 = OFF
;menu-0-1-exec = menu-open-2
;menu-0-2 = SLP
;menu-0-2-exec = menu-open-3
;
;menu-1-0 = CNF
;menu-1-0-exec = reboot
;
;menu-2-0 = CNF
;menu-2-0-exec = poweroff
;
;menu-3-0 = CNF
;menu-3-0-exec = zzz

[module/wname]
type = custom/script
exec = xprop -id $(bspc query -N -n focused) WM_CLASS | awk '{print $4}' | cut -c2- | rev | cut -c2- | rev
exec-if = bspc query -N -n focused
interval = 0


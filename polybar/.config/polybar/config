[module/date]
type = internal/date
interval = 1

date = "%a %d "
date-alt = "%a %Y-%m-%d  "

time = "%H:%M"
time-alt = "%H:%M:%S"

;format-prefix = "DAT"
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.primary}

label = "%date%%time%"

